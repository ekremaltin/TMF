<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section scripts
{
    <script>
        var gameList = $('#userGame_id');
        gameList.empty();
        $.ajax({
            type: 'GET',
            url: '/games/getGames',
            datatype: 'json',
            success: function (data) {
                $.each(data, function (index, option) {
                    gameList.append('<option value=' + option.Value + '>' + option.Text + '</option>');
                    $("#cbList").append('<div class="col-sm-offset-2 col-sm-10">' +
                        '<div class="checkbox">' +
                        ' <label>' +
                        '  <input type="checkbox" name=' + option.Text + ' > ' + option.Text + '' +
                        '                 </label>' +
                        '         </div>' +
                        ' </div>');
                });
            }
        })

    </script>
}
